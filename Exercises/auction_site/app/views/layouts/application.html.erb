<!DOCTYPE html>
<html>
<head>
  <title>AuctionSite</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <% if current_user %>
      <p>Hello, <%= current_user.name %>, <%= link_to "Log out", '/logout', method: :delete %><br></p>
    <% else %>
      <%= link_to "Log in", '/login' %><br>
    <% end %>
  </header>
  <h1><%= link_to("fake-bay.com", root_path) %></h1>

<%= yield %>

</body>
</html>
